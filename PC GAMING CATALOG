<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
// Recherche
function searchTable(){let text=document.getElementById("searchInput").value.toLowerCase();document.querySelectorAll("table").forEach(table=>{table.querySelectorAll("tr").forEach((row,i)=>{if(i===0) return;let show=false;row.querySelectorAll("td").forEach(td=>{if(td.innerText.toLowerCase().includes(text)) show=true;});row.style.display=show?"":"";});});}

// Comparateur
function compareSelected(){const container=document.getElementById("compareContainer");container.innerHTML="";const selected=document.querySelectorAll(".compareItem:checked");if(selected.length===0){container.innerHTML="<p>Aucun composant s√©lectionn√©</p>";return;}selected.forEach(item=>{let box=document.createElement("div");box.className="compareBox";box.innerHTML=`<h3>${item.dataset.name}</h3><p>Prix: ${item.dataset.price} ‚Ç¨</p><p>Stat: ${item.dataset.stat}</p>`;container.appendChild(box);});}

// Export PDF
function exportPDF(){const { jsPDF } = window.jspdf;const doc = new jsPDF();doc.text("Catalogue PC Gaming - Composants Compar√©s", 10, 10);let y=20;document.querySelectorAll(".compareBox").forEach(box=>{doc.text(box.innerText,10,y);y+=10;});doc.save("Comparateur_PC_Gaming.pdf");}

// Graphiques
const cpuLabels = Array.from(document.querySelectorAll("#tableCPU tr td:first-child")).map(td=>td.innerText).slice(1);
const cpuFPS = Array.from(document.querySelectorAll("#tableCPU tr td:nth-child(5)")).map(td=>parseInt(td.innerText)).slice(1);
new Chart(document.getElementById('cpuChart'),{type:'bar',data:{labels:cpuLabels,datasets:[{label:'FPS 1080p',data:cpuFPS,backgroundColor:'rgba(75, 192, 192, 0.7)'}]},options:{responsive:true,scales:{y:{beginAtZero:true}}}});

const gpuLabels = Array.from(document.querySelectorAll("#tableGPU tr td:first-child")).map(td=>td.innerText).slice(1);
const gpuFPS = Array.from(document.querySelectorAll("#tableGPU tr td:nth-child(5)")).map(td=>parseInt(td.innerText)).slice(1);
new Chart(document.getElementById('gpuChart'),{type:'bar',data:{labels:gpuLabels,datasets:[{label:'FPS 1440p',data:gpuFPS,backgroundColor:'rgba(255, 99, 132, 0.7)'}]},options:{responsive:true,scales:{y:{beginAtZero:true}}}});

const ramLabels = Array.from(document.querySelectorAll("#tableRAM tr td:first-child")).map(td=>td.innerText).slice(1);
const ramSpeed = Array.from(document.querySelectorAll("#tableRAM tr td:nth-child(3)")).map(td=>parseInt(td.innerText)).slice(1);
new Chart(document.getElementById('ramChart'),{type:'bar',data:{labels:ramLabels,datasets:[{label:'Vitesse MHz',data:ramSpeed,backgroundColor:'rgba(153, 102, 255, 0.7)'}]},options:{responsive:true,scales:{y:{beginAtZero:true}}}});

// Mode clair/sombre
(function(){const h=new Date().getHours();document.body.classList.add((h>=19||h<7)?"dark":"light");})();
</script>
